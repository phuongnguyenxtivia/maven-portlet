<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>maven-portlet</portlet-name>
		<display-name>Product SpringMVC</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/WEB-INF/views/products/view.jsp</value>
		</init-param>
		<init-param>
			<name>edit-template</name>
			<value>/WEB-INF/views/products/preferences.jsp</value>
		</init-param>
 		<init-param>
        	<name>config-template</name>
        	<value>/WEB-INF/views/products/configuration.jsp</value>
   		 </init-param>
		<init-param>
			<name>contextConfigLocation</name>
			<value>/WEB-INF/spring/portlet-context.xml</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>maven-portlet</title>
			<short-title>maven-portlet</short-title>
			<keywords>maven-portlet</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		<supported-processing-event>
		    <qname xmlns:x="http://proliferay.com/events">x:ipc-text</qname>
		</supported-processing-event>
	</portlet>
	
	<portlet>
		<portlet-name>maven-product-search</portlet-name>
		<display-name>Product Search SpringMVC</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/WEB-INF/views/productSearch/searchByProdId.jsp</value>
		</init-param>
		<init-param>
			<name>contextConfigLocation</name>
			<value>/WEB-INF/spring/portlet-product-search-context.xml</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>maven-product-search</title>
			<short-title>maven-product-search</short-title>
			<keywords>maven-product-search</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		<supported-publishing-event>
		    <qname xmlns:x="http://proliferay.com/events">x:ipc-text</qname>
		</supported-publishing-event>
	</portlet>
</portlet-app>